        }
        .modal-backing {
            height: calc( var(--target-height) + 10px);
            background-color: var(--pinnacle-gold);
            position: absolute;
            width: calc(60% + 10px);
            left: calc(20% - 5px);
            top: 50%;
            transform: translate(0%, -50%);
            clip-path:
              polygon(
                0% var(--notchSize),
                var(--notchSize) 0%,
                100% 0%,
                100% calc(100% - var(--notchSize)),
                calc(100% - var(--notchSize)) 100%,
                var(--notchSize) 100%,
                0% 100%
              );
              z-index: 5;
        }
        .modal-dismiss {
            height: var(--notchSize);
            padding: calc((var(--notchSize) - 20px) / 2) 0;
        }
        .modal-dismiss svg {
            display: block;
            margin-left: auto;
            height: 100%;
        }
